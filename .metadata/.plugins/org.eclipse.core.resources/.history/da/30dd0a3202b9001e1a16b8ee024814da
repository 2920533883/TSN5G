        //        tt.ethgIn <-- ethg.upperLayerOut;
        //        tt.ethgOut --> ethg.upperLayerIn;
        tt.phys <--> phys;
        tt.out --> ppp.upperLayerIn;
        ppp.upperLayerOut  --> tt.in;
        ppp.phys  <--> pppg;
